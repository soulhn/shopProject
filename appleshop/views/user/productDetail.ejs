  function addCart(productId) {
    var count = document.getElementById("result").value;
    console.log(count);
    fetch("/user/insertCart", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify({
        productId: productId,
        count: document.getElementById("result").value,
      }),
    })
      .then((response) => response.json())
